<!-- Define a function to render the message -->
<% function renderMessage(message) { %>
  <div class="item-details">
    <article>
      <h2>Sender: <%= message.sender %></h2>
      <p>
        <strong>Recipient:</strong> <%= message.recipient %><br />
      </p>
      <div><strong>Content:</strong><%= message.content %></div>
  
      <!-- Update button -->
      <form
        class="action-form"
        method="GET"
        action="/single-message/update/<%= message._id %>"
      >
        <button type="submit" class="update">Update</button>
      </form>
  
      
      <!-- Delete button -->
      <form
        class="action-form"
        method="POST"
        action="/single-message/<%= message._id %>?_method=DELETE"
      >
        <button type="submit">Delete</button>
      </form>
    </article>
  </div>
  <% } %>
  
  <% 
  function formatDate(dateString) {
      const date = new Date(dateString);
      // Format the date as desired (e.g., YYYY-MM-DD)
      const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
      return formattedDate;
  } 
  %>
  
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Single Message</title>
      <link rel="stylesheet" href="/css/styles.css" />
      <!-- Link to external stylesheet -->
    </head>
    <body>
      <nav class="navbar">
        <h1>My Messages</h1>
        <div class="links">
          <a href="/">Home</a>
          <a class="new-item-link" href="/addmessage">New Message</a>
        </div>
      </nav>
  
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (message) { %> <%= renderMessage(message) %> <% } else { %>
            <p>No message found.</p>
            <% } %>
          </div>
        </div>
      </div>
    </body>
  </html>
